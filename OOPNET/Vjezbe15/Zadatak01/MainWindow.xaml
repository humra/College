<Window x:Class="Zadatak01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <Slider Name="slider" Maximum="100" Minimum="1" IsSnapToTickEnabled="True" Interval="1" Width="300"/>
        <Label Content="{Binding ElementName=slider, UpdateSourceTrigger=PropertyChanged, Path=Value}" 
               Background="LightBlue" Height="50" Width="100"/>
        <Button Name="btnGumb" Content="Povecaj me" Click="btnGumb_Click"/>
        <TextBox Name="tekstBoks" Text="{Binding ElementName=slider, Path=Value, UpdateSourceTrigger=PropertyChanged}"/>
    </StackPanel>
</Window>
