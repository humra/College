<Window x:Class="Zadatak06.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <Slider Name="slider" Width="300" Maximum="360" Minimum="0"
                IsMoveToPointEnabled="True" Interval="1"/>
        <Rectangle Name="rektangl" Fill="LightBlue" Height="100" Width="100">
            <Rectangle.LayoutTransform>
                <RotateTransform CenterX="50" CenterY="50" 
                                 Angle="{Binding ElementName=slider, Path=Value, UpdateSourceTrigger=PropertyChanged}"/>
            </Rectangle.LayoutTransform>
        </Rectangle>
    </StackPanel>
</Window>
