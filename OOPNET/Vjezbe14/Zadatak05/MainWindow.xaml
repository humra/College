<Window x:Class="Zadatak05.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <ControlTemplate x:Key="noviPredlozak" TargetType="{x:Type ListBoxItem}">
            <Grid Margin="3">
                <Ellipse x:Name="elipsa" Stroke="Orange" StrokeThickness="11" Fill="Transparent"/>
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Grid>
            <ControlTemplate.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Fill" Value="Gold" TargetName="elipsa"/>
                    <Setter Property="Stroke" Value="Green" TargetName="elipsa"/>
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        
        <Style TargetType="{x:Type ListBoxItem}">
            <Setter Property="Template" Value="{StaticResource ResourceKey=noviPredlozak}"/>
        </Style>
    </Window.Resources>
    
    <StackPanel>
        <ListBox>
            <ListBoxItem>1</ListBoxItem>
            <ListBoxItem>2</ListBoxItem>
            <ListBoxItem>3</ListBoxItem>
        </ListBox>
    </StackPanel>
</Window>
