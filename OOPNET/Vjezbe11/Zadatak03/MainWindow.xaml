<Window x:Class="Zadatak03.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button>
            <Button.Content>
                <TextBlock TextWrapping="WrapWithOverflow">
                    <Run Foreground="Blue">
                    Q: Who lets you walk
                    </Run>
                    <LineBreak/>
                    <Run Foreground="Green">
                    through walls?
                    </Run>
                    <LineBreak/>
                    <LineBreak/>
                    <Run Foreground="Red">
                    A: A door.
                    </Run>
                </TextBlock>
            </Button.Content>
            <Button.FontFamily>Segoe UI</Button.FontFamily>
            <Button.FontSize>20</Button.FontSize>
        </Button>
    </Grid>
</Window>
