<Window x:Class="Zadatak07.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <LinearGradientBrush x:Key="brushy">
            <GradientStop Offset="0" Color="Yellow"/>
            <GradientStop Offset="0.5" Color="Orange"/>
            <GradientStop Offset="1" Color="Yellow"/>
        </LinearGradientBrush>
        <EventTrigger RoutedEvent="ListBox.Loaded" x:Key="triger">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation To="1" AutoReverse="True" RepeatBehavior="Forever"
                                                 Duration="0:0:2"
                                                 Storyboard.TargetProperty="Background.GradientStops[1].Offset"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Resources>
    <Grid>
        <ListBox Height="100" Background="{StaticResource ResourceKey=brushy}">
            <ListBoxItem>1</ListBoxItem>
            <ListBoxItem>2</ListBoxItem>
            <ListBoxItem>3</ListBoxItem>
            <ListBoxItem>4</ListBoxItem>
            <ListBoxItem>5</ListBoxItem>
            <ListBox.Triggers>
                <StaticResourceExtension ResourceKey="triger"/>
            </ListBox.Triggers>
        </ListBox>
    </Grid>
</Window>
