<Window x:Class="Zadatak01.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <Button Name="btnPrvi" Content="Prvi gumb" Background="Red">
            <Button.RenderTransform>
                <RotateTransform Angle="5"/>
            </Button.RenderTransform>
        </Button>
        <Button Name="bntDrugi" Content="Drugi gumb" Background="Orange" Width="500">
            <Button.LayoutTransform>
                <RotateTransform Angle="45"/>
            </Button.LayoutTransform>
        </Button>
        <Button Name="btnTreci" Content="Treci gumb" Background="Green"></Button>
    </StackPanel>
</Window>
