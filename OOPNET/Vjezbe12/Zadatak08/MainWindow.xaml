<Window x:Class="Zadatak08.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <StackPanel>
        <Button HorizontalAlignment="Left" VerticalAlignment="Top" Content="Gumb 1"
                Background="{StaticResource greenBrush}"
                MinHeight="100" MinWidth="100"
                Click="Button_Click" Name="btn1">
        </Button>
        <Button Content="Gumb 2"
                Background="{StaticResource greenBrush}"
                MinHeight="100" MinWidth="100"
                Click="Button_Click" Name="btn2">
        </Button>
        <Button HorizontalAlignment="Right" VerticalAlignment="Top" Content="Gumb 3"
                Background="{StaticResource greenBrush}"
                MinHeight="100" MinWidth="100"
                Click="Button_Click" Name="btn3">
        </Button>
    </StackPanel>
</Window>
