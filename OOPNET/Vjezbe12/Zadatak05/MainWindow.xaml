<Window x:Class="Zadatak05.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Ellipse Width="300" Height="300" Fill="LightBlue" Stroke="Purple" StrokeThickness="5">
            <Ellipse.Triggers>
                <EventTrigger RoutedEvent="Ellipse.Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation To="2" AutoReverse="True" RepeatBehavior="Forever"
                                             Storyboard.TargetProperty="StrokeThickness"/>
                            <ColorAnimation To="Orange" AutoReverse="True" RepeatBehavior="Forever"
                                            Storyboard.TargetProperty="Stroke.Color"/>
                            <DoubleAnimation To="250" RepeatBehavior="Forever" AutoReverse="True"
                                             Storyboard.TargetProperty="Width"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Ellipse.Triggers>
        </Ellipse>
    </Grid>
</Window>
