@model IEnumerable<Zadatak01.Kupac>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div class="form-group">
    <div class="col-md-10">
        @Html.DropDownList("IDGrad", null, htmlAttributes: new { @class = "form-control" })
    </div>
</div>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">

    <tr>
        @foreach (var item in Model)
        {
            @Html.Partial("_JedanKupac", item);
        }
    </tr>
</table>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $("#IDGrad").change(function () {
            var s = 'Kupacs/Index/' + $("#IDGrad").val();
            window.location.pathname = s;
        })
    </script>
}