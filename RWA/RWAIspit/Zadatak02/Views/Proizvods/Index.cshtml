@model IEnumerable<Zadatak02.Proizvod>

@{
    ViewBag.Title = "Index";
}


@Html.DropDownList("KategorijaID", null, htmlAttributes: new { @class = "form-control" })

@if (ViewBag.PotkategorijaID != null)
{
    @Html.DropDownList("PotkategorijaID", null, htmlAttributes: new { @class = "form-control" })
}

@if (Model != null)
{

    <table>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.Naziv, "Edit", new { id = item.IDProizvod})
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BrojProizvoda)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Boja)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MinimalnaKolicinaNaSkladistu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CijenaBezPDV)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Potkategorija.Naziv)
                </td>
            </tr>
        }

    </table>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>

        $('#KategorijaID').change(function () {
            var s = 'Proizvods/Index/' + $('#KategorijaID').val();
            window.location.pathname = s;
        })

        $('#PotkategorijaID').change(function () {
            var str = 'Proizvods/Index/' + $('#KategorijaID').val() + '/' + $('#PotkategorijaID').val();
            window.location.pathname = str;
        })

    </script>
}

