@model IEnumerable<Zadatak02.Proizvod>

@{
    ViewBag.Title = "Index";
}

@Html.DropDownList("KategorijaID", null, htmlAttributes: new { @class = "form-control" })

@if (ViewBag.PotkategorijaID != null)
{
    @Html.DropDownList("PotkategorijaID", null, htmlAttributes: new { @class = "form-control" })
}

@if (Model != null)
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Naziv)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BrojProizvoda)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Boja)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MinimalnaKolicinaNaSkladistu)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CijenaBezPDV)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Potkategorija.Naziv)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Naziv)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.BrojProizvoda)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Boja)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MinimalnaKolicinaNaSkladistu)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CijenaBezPDV)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Potkategorija.Naziv)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.IDProizvod }) |
                    @Html.ActionLink("Details", "Details", new { id = item.IDProizvod }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.IDProizvod })
                </td>
            </tr>
        }
    </table>

}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")

    <script>
        $('#KategorijaID').change(function () {
            var s = 'Proizvods/Index/' + $('#KategorijaID').val();
            window.location.pathname = s;
        })

        $('#PotkategorijaID').change(function () {
            var s = 'Proizvods/Index/' + $('#KategorijaID').val() + '/' + $('#PotkategorijaID').val();
            window.location.pathname = s;
        })
    </script>
}