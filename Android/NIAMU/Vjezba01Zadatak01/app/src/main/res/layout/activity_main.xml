<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:weightSum="10"
    tools:context="com.humra.vjezba01zadatak01.MainActivity">

    <TextView
        android:id="@+id/txtInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        style="@style/CustomTextStyle"/>

    <TextView
        android:id="@+id/txtResult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        style="@style/CustomTextStyle"/>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        android:weightSum="5">

        <TableRow android:layout_weight="1">
            <Button
                android:id="@+id/btnC"
                style="@style/MyCustomTheme"
                android:layout_span="2"
                android:text="C" />

            <Button
                android:id="@+id/btnDiv"
                style="@style/MyCustomTheme"
                android:text="/" />
        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/btn7"
                style="@style/MyCustomTheme"
                android:text="7" />

            <Button
                android:id="@+id/btn8"
                style="@style/MyCustomTheme"
                android:text="8" />

            <Button
                android:id="@+id/btn9"
                style="@style/MyCustomTheme"
                android:text="9" />

            <Button
                android:id="@+id/btnMul"
                style="@style/MyCustomTheme"
                android:text="*" />
        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/btn4"
                style="@style/MyCustomTheme"
                android:text="4" />

            <Button
                android:id="@+id/btn5"
                style="@style/MyCustomTheme"
                android:text="5" />

            <Button
                android:id="@+id/btn6"
                style="@style/MyCustomTheme"
                android:text="6" />

            <Button
                android:id="@+id/btnSub"
                style="@style/MyCustomTheme"
                android:text="-" />
        </TableRow>

        <TableRow android:layout_weight="1">

            <Button
                android:id="@+id/btn1"
                style="@style/MyCustomTheme"
                android:text="1" />

            <Button
                android:id="@+id/btn2"
                style="@style/MyCustomTheme"
                android:text="2" />

            <Button
                android:id="@+id/btn3"
                style="@style/MyCustomTheme"
                android:text="3" />

            <Button
                android:id="@+id/btnAdd"
                style="@style/MyCustomTheme"
                android:text="+" />
        </TableRow>

        <TableRow android:layout_weight="1">
            <Button
                android:id="@+id/btn0"
                style="@style/MyCustomTheme"
                android:layout_span="2"
                android:text="0" />

            <Button
                android:id="@+id/btnEq"
                style="@style/MyCustomTheme"
                android:text="=" />
        </TableRow>
    </TableLayout>

</LinearLayout>
