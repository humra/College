<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.vjezba.todolist"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="16" />
    
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.vjezba.todolist.ZadatakActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.vjezba.todolist.KategorijeActivity"
            android:label="Kategorije" >
        </activity>
        <activity
            android:name="com.vjezba.todolist.UnosPromjenaZadatkaActivity"
            android:label="Zadatak" >
        </activity>
        <activity
            android:name="com.vjezba.todolist.OdabirKontaktaActivity"
            android:label="Odaberite kontakt" >
            <intent-filter>
                <action android:name="android.intent.action.PICK" />

                <category android:name="android.intent.category.DEFAULT" />

                <data
                    android:host="com.android.contacts"
                    android:mimeType="vnd.android.cursor.dir/contact"
                    android:path="/contacts"
                    android:scheme="content" />
            </intent-filter>
        </activity>

        <provider
            android:name="com.vjezba.todolist.provideri.ZadaciProvider"
            android:authorities="com.todolist.zadaciprovider"
            android:exported="true" >
        </provider>
    </application>

</manifest>